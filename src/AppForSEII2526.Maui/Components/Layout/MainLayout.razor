@inherits LayoutComponentBase
@using AppForSEII2526.Maui.Services
@inject FontServices FontServices
@inject ThemeService ThemeService


<div class="page font-container @FontServices.CurrentFontClass">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    protected override void OnInitialized()
    {
        FontServices.OnFontChanged += RefreshUI;
    }

    private void RefreshUI()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        FontServices.OnFontChanged -= RefreshUI;
    }

    // Theme Initialization
    private bool _initialized;
    
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _initialized = true;
            try
            {
                await ThemeService.InitializeAsync();
            }
            catch (InvalidOperationException ex)
            {
                // El runtime de JS no estaba listo; registra para diagnóstico sin romper la UI.
                System.Diagnostics.Debug.WriteLine($"Inicialización de ThemeService: interop JS no disponible: {ex.Message}");
            }
        }
    }
}