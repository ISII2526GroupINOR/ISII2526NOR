@inherits LayoutComponentBase
@using AppForSEII2526.Maui.Services
@inject FontServices FontServices
@inject ThemeService ThemeService
@inject IJSRuntime JS


<div class="page font-container @FontServices.CurrentFontClass">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    protected override void OnInitialized()
    {
        FontServices.OnFontChanged += RefreshUI;
        ThemeService.OnChange += RefreshUI;
    }

    private void RefreshUI()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        FontServices.OnFontChanged -= RefreshUI;
        ThemeService.OnChange -= RefreshUI;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                await ThemeService.InitializeAsync();
                // Aplicar tema por JS desde aquí (contexto WebView disponible)
                try
                {
                    await JS.InvokeVoidAsync("themeInterop.setTheme", ThemeService.CurrentTheme);
                }
                catch (Exception ex)
                {
                    // Registrar pero no romper
                    System.Diagnostics.Debug.WriteLine($"MainLayout: setTheme falló: {ex}");
                }
            }
            catch (Exception ex)
            {
                System.Diagnostics.Debug.WriteLine($"Inicialización de ThemeService: {ex}");
            }
        }
    }
}