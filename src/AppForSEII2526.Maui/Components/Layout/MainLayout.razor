@inherits LayoutComponentBase
@using AppForSEII2526.Maui.Services
@inject FontServices FontServices
@inject ThemeService ThemeService
@inject IJSRuntime JS


<div class="page font-container @FontServices.CurrentFontClass">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>

        <button class="assistant-fab">
            <img src="Images/assistantIcon.png" alt="Assistant" />
        </button>

        @if (showDialog)
        {
            <div class="assistant-modal-backdrop" @onclick="CloseDialog">
            </div>

            <div class="assistant-modal">
                <h4>Asistente</h4>

                <textarea class="assistant-textarea"
                          @bind="userMessage"
                          placeholder="Escribe tu mensaje...">
                </textarea>

                <div class="assistant-buttons">
                    <button class="btn-send" @onclick="SendMessage">Enviar</button>
                    <button class="btn-cancel" @onclick="CloseDialog">Cancelar</button>
                </div>
            </div>
        }
    </main>
</div>

@code {
    private bool showDialog = false;
    private string userMessage = null;
    private void CallAssistant()
    {
        
    }

    protected override void OnInitialized()
    {
        FontServices.OnFontChanged += RefreshUI;
        ThemeService.OnChange += RefreshUI;
    }

    private void RefreshUI()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        FontServices.OnFontChanged -= RefreshUI;
        ThemeService.OnChange -= RefreshUI;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                await ThemeService.InitializeAsync();
                // Apply theme
                try
                {
                    await JS.InvokeVoidAsync("themeInterop.setTheme", ThemeService.CurrentTheme);
                }
                catch (Exception ex)
                {
                    System.Diagnostics.Debug.WriteLine($"MainLayout: setTheme falló: {ex}");
                }

                // Apply accent
                try
                {
                    await JS.InvokeVoidAsync("themeInterop.setAccent", ThemeService.CurrentAccent);
                }
                catch (Exception ex)
                {
                    System.Diagnostics.Debug.WriteLine($"MainLayout: setAccent falló: {ex}");
                }
            }
            catch (Exception ex)
            {
                System.Diagnostics.Debug.WriteLine($"Inicialización de ThemeService: {ex}");
            }
        }
    }
}