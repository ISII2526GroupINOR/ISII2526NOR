@page "/adminhome"

<div class="d-flex justify-content-center align-items-center">
  <div class="center">
      <div class="selection-widget">
          <div class ="title-widget">RESTOCK</div>

            @foreach (var item in Items)
            {
                <div class="item-widget">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6" width="24" height="24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126ZM12 15.75h.007v.008H12v-.008Z" />
                    </svg>
                    <span>@item</span>
                </div>
            }
        </div>
        
        <div class="notification-widget">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6" width="40" height="40">
                <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0" />
            </svg>

            <div>
                <strong font-size="24px" font-weight="bold">Notifications</strong>
                <span>No new notifications</span>
            </div>
        </div>
  </div>
</div>


@code {
    // https://heroicons.com/
    [Parameter]
    public List<string> Items { get; set; } = new List<string>
    {
        "Item1 pending",
        "Item2 pending",
        "Item3 pending"
    };
}
