            </div>
            <div class="col">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6" @onclick="GoHome" cursor="pointer">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 9V5.25A2.25 2.25 0 0 1 10.5 3h6a2.25 2.25 0 0 1 2.25 2.25v13.5A2.25 2.25 0 0 1 16.5 21h-6a2.25 2.25 0 0 1-2.25-2.25V15m-3 0-3-3m0 0 3-3m-3 3H15" />
                </svg>
            </div>
        </div>
  </div>
</div>


@code {
    // https://heroicons.com/
    [Inject] NavigationManager Nav { get; set; }
    void GoProfile() => Nav.NavigateTo("/userconfiguration");
    void GoHome() => Nav.NavigateTo("/");

    [Parameter]
    public List<string> Items { get; set; } = new List<string>
    {
        "Item1 pending",
        "Item2 pending",
        "Item3 pending"
    };
}
