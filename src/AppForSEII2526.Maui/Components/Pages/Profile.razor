@code {
    [Inject] NavigationManager Nav { get; set; }
    void GoProfile() => Nav.NavigateTo("/profile");
    void GoHome() => Nav.NavigateTo("/adminhome");
    void Exit() => Nav.NavigateTo("/");
    //To add distinction between admin and user
    private void GoConf() { Nav.NavigateTo("/adminconfiguration"); }
}
