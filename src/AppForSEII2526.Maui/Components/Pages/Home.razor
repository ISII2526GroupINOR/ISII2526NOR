@page "/"
@using Resources.Languages

<div class="d-flex justify-content-center align-items-center">
  <div class="center">
     <img alt="Here goes the Logo" src="Images/logo.png" class="logo">
     <button class="light-home-buttons" @onclick="IrLogin"> @AppResources.LoginButton</button>
     <button class="light-home-buttons" @onclick="IrRegister"> @AppResources.RegisterButton</button>
  </div>
</div>


@code {
    [Inject] NavigationManager Nav { get; set; }
    bool ShowLan = true;

    void IrLogin() => Nav.NavigateTo("/userconfiguration");
    void IrRegister() => Nav.NavigateTo("/weather");

}