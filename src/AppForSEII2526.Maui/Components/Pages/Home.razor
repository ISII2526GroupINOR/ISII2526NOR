@page "/"
@inject Services.LanguageServices LanguageServices
@inject Services.FontServices FontServices
@using Resources.Languages

    <div class="language-selector">
            <img alt="Español" src="Images/Flag-Spain.jpg" class="language-image" 
                @onclick="@(() => LanguageServices.SetLanguage("es"))">
            <img alt="English" src="Images/Flag-UK.jpg" class="language-image"
                @onclick="@(() => LanguageServices.SetLanguage("en"))">
        </div>
    <div class="center">
        <h1>@AppResources.WelcomeMessage</h1>
        
        <!--
        <select style="float: right"
            @onchange="@(e => LanguageServices.SetLanguage(e.Value?.ToString() ?? "es"))">
            <option value="es">Español</option>
            <option value="en">English</option>
        </select>
        -->
        <img alt="Here goes the Logo" src="Images/logo.png" class="logo">
        <button class="light-home-buttons" @onclick="IrLogin"> @AppResources.LoginButton</button>
        <button class="light-home-buttons" @onclick="IrRegister"> @AppResources.RegisterButton</button>

        <select @onchange="@(e => FontServices.SetFont(e.Value?.ToString() ?? "font-roboto-italic"))">
            <option value="font-open-sans">Open sans</option>
            <option value="font-roboto-light">Roboto Light</option>
            <option value="font-roboto-italic">Roboto Italic</option>
            <option value="font-roboto-condensed">Roboto Condensed</option>
            <option value="font-play-fair">Play fair</option>
        </select>
    </div>


@code {
    [Inject] NavigationManager Nav { get; set; }
    bool ShowLan = true;

    void IrLogin() => Nav.NavigateTo("/Counter");
    void IrRegister() => Nav.NavigateTo("/weather");

    void ToggleLan()
    {
        ShowLan = !ShowLan;
    }
}